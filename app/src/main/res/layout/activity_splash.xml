<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorContentBackgrounds"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/splash_logo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="@dimen/splash_margin_top_logo_container"
            android:background="@color/colorScreenBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/splash_logo_container_height">
        </RelativeLayout>

        <ImageView
            android:src="@drawable/logo"
            android:layout_marginTop="@dimen/splash_margin_top_logo"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/splash_logo_background_circle_width"
            android:layout_height="@dimen/splash_logo_background_circle_width" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/splash_app_name"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/splash_app_name_margin_from_container"
        android:layout_below="@+id/splash_logo_container"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:src="@drawable/app_x"
            android:layout_width="@dimen/splash_app_name_x_size"
            android:layout_height="@dimen/splash_app_name_x_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="@dimen/splash_app_name_text_size"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:text="@string/wallet_str"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/splash_app_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cryptocurrency Wallet"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            />

    </LinearLayout>


</RelativeLayout>
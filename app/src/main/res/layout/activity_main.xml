<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorScreenBackground"
    android:orientation="vertical"
    tools:context="com.bytetobyte.xwallet.MainActivity">

    <LinearLayout
        android:id="@+id/main_top_bar_layout"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_top_title_height">

        <ImageView
            android:src="@drawable/app_x"
            android:layout_marginTop="2dp"
            android:layout_width="@dimen/splash_app_name_x_size"
            android:layout_height="@dimen/splash_app_name_x_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="@dimen/splash_app_name_text_size"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:text="@string/wallet_str"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_below="@+id/main_top_bar_layout"
        android:layout_above="@+id/main_footer_container"
        android:id="@+id/xwallet_content_layout"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


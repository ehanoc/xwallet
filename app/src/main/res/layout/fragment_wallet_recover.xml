<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="@dimen/title_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/recover_text_description"
            android:text="@string/recover_enter_seed_and_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/recover_seed_input"
            android:layout_below="@+id/recover_text_description"
            android:layout_width="match_parent"
            android:textSize="@dimen/recover_seed_input_text_size"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/recovery_date_options"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_below="@+id/recover_seed_input"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recover_date_label_btn"
                android:layout_weight="1"
                android:textSize="@dimen/recover_set_date_text_size"
                android:text="Enter Creation Date"
                android:textColor="@color/colorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/recover_date_display"
                android:layout_weight="9"
                android:text="----"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recovery_block_height_options_layout"
            android:layout_below="@+id/recovery_date_options"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Wallet Block height :"
                android:textColor="@color/colorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/recovery_block_height_text"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/recovery_block_height_options_layout"
            android:layout_above="@+id/recover_button"
            android:visibility="invisible"
            android:id="@+id/monero_recover_options_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/monero_recover_view_wallet_switch"
                android:text="View only wallet"
                android:textColor="@color/colorSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="4dp"
            android:visibility="invisible"
            android:id="@+id/recover_button"
            android:src="@drawable/ic_send"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:civ_border_width="4dp"
            app:civ_border_color="@android:color/white"
            app:civ_fill_color="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_width="@dimen/send_address_height"
            android:layout_height="@dimen/send_address_height" />


    </RelativeLayout>

</RelativeLayout>